{
  "name": "workshop-node_grodriguezis",
  "version": "0.0.1",
  "description": "Integrated exercise for the nodejs workshop",
  "main": "index.js",
  "scripts": {
    "test": "test/test.js",
    "clean": "rimraf assets/dist/**/* && mkdir assets/dist/scripts",
    "autoprefixer": "postcss -u autoprefixer -r assets/dist/styles/*",
    "scss": "node-sass --output-style compressed -o assets/dist/styles assets/src/styles",
    "lint:styles": "sass-lint -v -q",
    "build:styles": "npm run lint:styles && npm run scss && npm run autoprefixer",
    "watch:styles": "onchange \"assets/src/styles\" -- npm run build:styles",
    "lint:scripts": "./node_modules/.bin/eslint -c .eslintrc assets/src/scripts ||Â true",
    "uglifyjs": "uglifyjs --beautify --output assets/dist/scripts/scripts.js assets/src/scripts/**.js && uglifyjs --compress --mangle --output assets/dist/scripts/scripts.min.js assets/src/scripts/**.js",
    "build:scripts": "npm run lint:scripts && npm run uglifyjs",
    "watch:scripts": "onchange \"assets/src/scripts\" -- npm run build:scripts",
    "imagemin": "imagemin assets/src/images/* -o assets/dist/images",
    "build:images": "npm run imagemin",
    "watch:images": "onchange \"assets/src/images\" -- npm run build:images",
    "build": "npm run clean && npm run build:styles && npm run build:scripts && npm run build:images",
    "watch": "npm-run-all -p watch:styles watch:scripts watch:images",
    "postinstall": "npm run build",
    "start": "./node_modules/.bin/nodemon index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fallemand/workshop-nodejs.git"
  },
  "keywords": [
    "node",
    "javascript",
    "express",
    "react"
  ],
  "author": "grodriguezis",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-eslint": "6.1.2",
    "eslint": "3.5.0",
    "eslint-config-airbnb-base": "7.1.0",
    "eslint-plugin-import": "1.15.0",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^2.1.1",
    "onchange": "^3.2.1",
    "postcss-cli": "^2.5.2",
    "rimraf": "^2.5.4",
    "sass-lint": "^1.12.1",
    "nodemon": "^1.11.0"
  },
  "dependencies": {
    "express": "^4.16.2",
    "express-react-views": "^0.10.4",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  }
}
