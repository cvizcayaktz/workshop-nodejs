<header role="banner" class="header">
    <div class="header__container">
        <a class="header__logo" href="/" tabindex="1">MercadoLibre - Donde compras y vendes de todo</a>
        <form class="header__search" action="/app/items" method="GET" role="search">
            <input type="text" class="header__search-input" name="search" max-length="120" tabindex="2" placeholder="Nunca dejes de buscar"  value="{{query}}"/>
            <button type="submit" class="header__search-btn" data-fastClick tabindex="3">
            <i class="header__search-icon"><span>Buscar</span></i>
            </button>
        </form>
    </div>
</header>