{
  "name": "integrador2",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "mocha",
    "clean": "rimraf assets/dist/**/*",
    "autoprefixer": "postcss -u autoprefixer -r assets/dist/styles/*",
    "scss": "node-sass --output-style compressed -o assets/dist/styles assets/src/styles",
    "lint": "eslint assets/src/scripts || true",
    "lint-scss": "sass-lint assets/src/styles/*.scss -v -q",
    "uglify": "mkdirp assets/dist/scripts -p && uglifyjs assets/src/scripts/*.js -m -o assets/dist/scripts/app.js && uglifyjs assets/src/scripts/*.js -m -c -o assets/dist/scripts/app.min.js",
    "imagemin": "imagemin assets/src/images/* -o assets/dist/images",
    "serve": "node index.js",
    "build:css": "npm run lint-scss && npm run scss && npm run autoprefixer",
    "build:js": "npm run lint && npm run uglify",
    "build:images": "npm run imagemin",
    "build:all": "npm run build:css && npm run build:js && npm run build:images",
    "watch:css": "onchange \"assets/src/styles\" -- npm run build:css",
    "watch:js": "onchange \"assets/src/scripts\" -- npm run build:js",
    "watch:images": "onchange \"assets/src/images\" -- npm run build:images",
    "watch:all": "npm-run-all -p watch:css watch:js watch:images",
    "postinstall": "npm run build:all && npm run watch:all"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.15.2",
    "express-handlebars": "^3.0.0",
    "helmet": "^3.5.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-eslint": "6.1.2",
    "browser-sync": "^2.18.12",
    "chai": "^3.5.0",
    "eslint": "3.5.0",
    "eslint-config-airbnb-base": "7.1.0",
    "eslint-plugin-import": "1.15.0",
    "imagemin-cli": "^3.0.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.3.0",
    "nock": "^9.0.13",
    "node-sass": "^4.5.3",
    "npm-run-all": "^2.1.1",
    "onchange": "^2.4.0",
    "postcss-cli": "^2.5.2",
    "rimraf": "^2.5.4",
    "sass-lint": "^1.10.2",
    "uglify-js": "^2.6.2"
  }
}
